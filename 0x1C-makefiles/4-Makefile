CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all

all: ${NAME}

${NAME}: ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}

%.o: %.c
	$(CC) ${CFLAGS} -c $< -o $@

clean:
	${RM} *# *~ *.swp ${NAME}

oclean:
	${RM} *.o

fclean: clean oclean

re: fclean all
